<launch>

	<rosparam command="load" file="$(env HOME)/workspace/data/cams/MH01/cam0/sensor.yaml" ns="/cam0"/>
	<rosparam command="load" file="$(env HOME)/workspace/data/cams/MH01/cam1/sensor.yaml" ns="/cam1"/>

	<node name="stereo_rectifier_node" pkg="dsvo" type="stereo_rectifier_node" output="screen" >
		<param name="cam0_topic" value="/cam0/image_raw" />
		<param name="cam1_topic" value="/cam1/image_raw" />
		<param name="cvt2VGA" value="false" />
	</node>

	<node name="stereo_processor_node" pkg="dsvo" type="stereo_processor_node" output="screen" >
		<param name="cam0_topic" value="/cam0/image_raw" />
		<param name="cam1_topic" value="/cam1/image_raw" />
		<param name="cvt2VGA" value="false" />
		<param name="gt_type" value="point" />
	</node>

</launch>
